<%= turbo_stream_from current_account, "quotes" %>

<h1>Quotes</h1>

<%= link_to "New quote", 
    new_quote_path, 
    class: "underline",
    data: { turbo_frame: dom_id(Quote.new) } %>

<%= turbo_frame_tag Quote.new do %>
  <% if @quotes.none? %>
    <%= render "quotes/empty_state" %>
  <% end %>
<% end %>

<%= turbo_frame_tag "quotes" do %>
  <%= render @quotes %>
<% end %>